{
  "name": "xxxxl",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "build:type-check": "vue-tsc --noEmit && vite build",
    "test": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" vitest",
    "test:optimized": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" vitest --config vitest.optimized.config.ts",
    "test:stable": "cross-env NODE_OPTIONS=\"--max-old-space-size=1024\" vitest --config vitest.stable.config.ts",
    "test:stable:run": "cross-env NODE_OPTIONS=\"--max-old-space-size=1024\" vitest run --config vitest.stable.config.ts",
    "test:unit": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" vitest run",
    "test:ui": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" vitest --ui",
    "test:run": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" vitest run",
    "test:coverage": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" vitest run --coverage",
    "test:watch": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" vitest --watch",
    "test:quality": "node scripts/test-quality-check.js",
    "test:ci": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" vitest run --coverage && node scripts/test-quality-check.js",
    "test:perf": "node scripts/test-performance.cjs",
    "test:fast": "vitest run --config vitest.fast.config.ts",
    "test:stability": "node scripts/test-stability.cjs",
    "test:stability:detailed": "node scripts/test-stability.cjs 5",
    "test:performance:benchmark": "node scripts/performance-benchmark.cjs",
    "test:gameboard": "vitest run test/performance/GameBoardPerformance.test.ts",
    "test:parallel": "vitest run --pool=threads --poolOptions.threads.maxThreads=8",
    "test:perf-check": "node scripts/test-performance.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:performance": "node scripts/run-performance-tests.cjs",
    "test:performance:memory": "node scripts/run-performance-tests.cjs --memory-profiling",
    "test:performance:no-regression": "node scripts/run-performance-tests.cjs --no-regression",
    "test:benchmark": "vitest run test/performance --reporter=verbose",
    "test:security": "node scripts/run-security-tests.cjs",
    "test:security:quick": "vitest run test/security --reporter=verbose",
    "security:audit": "npm audit --audit-level=moderate",
    "security:lint": "eslint src/**/*.{ts,vue,js}",
    "security:fix": "npm audit fix && eslint src/**/*.{ts,vue,js} --fix",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint . --fix",
    "dev:debug": "vite --debug",
    "analyze": "node scripts/bundle-analyzer.cjs",
    "deps:check": "node scripts/dependency-management.cjs check",
    "deps:update": "node scripts/dependency-management.cjs update",
    "security:scan": "node scripts/security-monitor.cjs scan",
    "tools:setup": "node scripts/dev-tools-manager.cjs"
  },
  "dependencies": {
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.7.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "cross-env": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-vue": "^10.4.0",
    "jsdom": "^26.1.0",
    "jsonc-parser": "^3.3.1",
    "playwright": "^1.54.2",
    "terser": "^5.43.1",
    "typescript": "^5.2.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  }
}
